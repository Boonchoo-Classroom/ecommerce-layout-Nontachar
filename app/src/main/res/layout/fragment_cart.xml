<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CartFragment">

    <!-- ใช้ LinearLayout แทน RelativeLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- สินค้าชิ้นที่ 1 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/product_border"
            android:padding="16dp">

            <!-- LinearLayout สำหรับรูปภาพและข้อความ -->
            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/imageFilterView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/s01"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="S01"
                        android:textStyle="bold"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:id="@+id/product_price_discounted1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$20"
                        android:textSize="18sp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textAlignment="textStart"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- ปุ่ม Remove -->
            <Button
                android:id="@+id/removeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

        <!-- สินค้าชิ้นที่ 2 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/product_border"
            android:padding="16dp">

            <!-- LinearLayout สำหรับรูปภาพและข้อความ -->
            <LinearLayout
                android:id="@+id/contentLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/s02"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/s02"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="S02"
                        android:textStyle="bold"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:id="@+id/product_price_discounted2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$20"
                        android:textSize="18sp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textAlignment="textStart"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- ปุ่ม Remove -->
            <Button
                android:id="@+id/removeButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

        <!-- สินค้าชิ้นที่ 3 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/product_border"
            android:padding="16dp">

            <!-- LinearLayout สำหรับรูปภาพและข้อความ -->
            <LinearLayout
                android:id="@+id/s03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:id="@+id/imageFilterView1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/s03"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/ts03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="S03"
                        android:textStyle="bold"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:id="@+id/ps03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$20"
                        android:textSize="18sp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textAlignment="textStart"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- ปุ่ม Remove -->
            <Button
                android:id="@+id/removeButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>